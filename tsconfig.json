{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "noEmit": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "module": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*",
        "./typings.d.ts"
    ],
    "exclude": ["node_modules"]
}